<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayActivity">
    <TextView
            android:text="TextView"
            android:layout_width="294dp"
            android:layout_height="293dp" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.246"/>
    <Button
            android:text="@string/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/finish"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintStart_toStartOf="@+id/back"
            app:layout_constraintEnd_toEndOf="@+id/next"/>
    <Button
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/back"
            app:layout_constraintEnd_toStartOf="@+id/next" android:layout_marginEnd="112dp"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintBottom_toTopOf="@+id/finish"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="48dp"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/next"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintBottom_toTopOf="@+id/finish"
            android:layout_marginBottom="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>